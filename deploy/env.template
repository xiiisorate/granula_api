# =============================================================================
# Granula API - Environment Variables Template
# =============================================================================
# Скопируйте этот файл в .env и заполните значения.
# НЕ коммитьте .env файл с реальными секретами!
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=production
LOG_LEVEL=info

# =============================================================================
# JWT Configuration
# =============================================================================
# Секретный ключ для подписи JWT токенов (минимум 32 символа)
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_ACCESS_EXPIRE=15m
JWT_REFRESH_EXPIRE=168h

# =============================================================================
# PostgreSQL
# =============================================================================
# Общий пароль для всех PostgreSQL баз (рекомендуется 32+ символа)
POSTGRES_PASSWORD=your-postgres-password-change-this

# =============================================================================
# MongoDB
# =============================================================================
MONGO_PASSWORD=your-mongodb-password-change-this

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=your-redis-password-change-this

# =============================================================================
# MinIO (Object Storage)
# =============================================================================
MINIO_SECRET_KEY=your-minio-secret-key-change-this

# =============================================================================
# OpenRouter AI API
# =============================================================================
# Получите ключ на https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ALLOWED_ORIGINS=https://granula.ru,https://app.granula.ru

# =============================================================================
# API Gateway
# =============================================================================
API_GATEWAY_PORT=8080

# =============================================================================
# Domain (for SSL and CORS)
# =============================================================================
API_DOMAIN=api.granula.raitokyokai.tech

